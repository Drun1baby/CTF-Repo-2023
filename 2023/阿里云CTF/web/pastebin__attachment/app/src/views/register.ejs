        <div class="col-md-10 mx-auto">
            <div class="card border-primary bg-light mb-4 rounded-3">
                <div class="card-header">
                    <ul class="nav justify-content-between">
                        <li class="nav-item">
                            <h3>Pastebin</h3>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary" href="/user/login">Login</a>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                <div class="row justify-content-start">
                    <div class="col-md-4">
                        <%- include('partials/about') %>
                    </div>
                    <div class="col-md-8">
                        <h3 class="text-center mb-2">Register</h3>
                        <%- include('partials/messages') %>

                        <form action="/user/register" method="POST">
                        <div class="mb-2">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" id="username" name="username" class="form-control"
                                placeholder="Enter Username" value="<%= typeof username != 'undefined' ? username : '' %>" />
                        </div>
                        <div class="mb-2">
                            <label for="password" class="form-label">Password</label>
                            <input type="password" id="password" name="password" class="form-control"
                                placeholder="Enter Password"
                                value="<%= typeof password != 'undefined' ? password : '' %>" />
                        </div>
                        <div class="mb-2">
                            <label for="password2" class="form-label">Password</label>
                            <input type="password" id="password2" name="password2" class="form-control"
                                placeholder="Confirm Password"
                                value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                        </div>
                        <button type="submit" class="btn btn-secondary">Register</button>
                    </form>
                    </div>
                </div>
            </div>
        </div>        